{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: Web (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/apps/web"
        },
        {
            "name": "Next.js: Admin (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceFolder}/apps/admin"
        },
        {
            "name": "Next.js: Debug Server-Side (Web)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/apps/web",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Next.js: Debug Server-Side (Admin)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/apps/admin",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Full Stack: Web",
            "configurations": [
                "Next.js: Debug Server-Side (Web)",
                "Next.js: Web (Chrome)"
            ]
        },
        {
            "name": "Full Stack: Admin",
            "configurations": [
                "Next.js: Debug Server-Side (Admin)",
                "Next.js: Admin (Chrome)"
            ]
        }
    ]
}